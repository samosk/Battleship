@using Microsoft.AspNetCore.Identity
@using Battleship.Models;
@inject UserManager<User> UserManager
@model List<GameViewModel>
@{
    ViewData["Title"] = "Game List";
    var loggedInUser = await UserManager.GetUserAsync(User);

    var activeGames = Model.Where(g => g.State != GameState.END).ToList();
    var completedGames = Model.Where(g => g.State == GameState.END).ToList();
}

<div class="min-vh-100 py-5 px-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Games</h1>
            <a asp-action="Create" class="btn btn-primary">New game</a>
        </div>

        <h2 class="mt-5 mb-4">Active</h2>
        @if (activeGames == null || !activeGames.Any())
        {
            <div class="alert alert-info">You have no active games. Start a new game!</div>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Game name</th>
                        <th>Opponent</th>
                        <th>Status</th>
                        <th>Last move</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var game in activeGames)
                    {
                        var opponent = (game.User1Id == loggedInUser.Id) ? game.User2.UserName : game.User1.UserName;

                        <tr class="position-relative">
                            <td> <a asp-action="Board" asp-route-id="@(game.GameId)" class="stretched-link">@(game.Name ?? "Untitled game")</a>
                            </td>
                            <td>@(opponent)</td>
                            <td>
                                @if (game.State == GameState.SETUP)
                                {
                                    <span class="badge bg-warning text-dark">
                                        Placing ships
                                    </span>
                                }
                                else
                                {
                                    <span class="badge @(game.IsMyTurn ? "bg-primary" : "bg-secondary")">
                                        @(game.IsMyTurn ? "Your turn" : "Opponent's turn")
                                    </span>
                                }
                            </td>
                            <td>@game.ModifiedAt?.ToString("d MMM yyyy 'at' HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        @if (completedGames != null && completedGames.Any())
        {
            <h2 class="mt-5 mb-4">Completed</h2>
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Game name</th>
                        <th>Opponent</th>
                        <th>Result</th>
                        <th>Last move</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var game in completedGames)
                    {
                        var opponent = (game.User1Id == loggedInUser.Id) ? game.User2.UserName : game.User1.UserName;

                        <tr class="position-relative">
                            <td> <a asp-action="Board" asp-route-id="@(game.GameId)" class="stretched-link">@(game.Name ?? "Untitled game")</a>
                            </td>
                            <td>@(opponent)</td>
                            <td>
                                <span class="badge @(game.IsMyTurn ? "bg-primary" : "bg-danger")">
                                    @(game.IsMyTurn ? "You won" : "You lost")
                                </span>
                            </td>
                            <td>@game.ModifiedAt?.ToString("d MMM yyyy 'at' HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
